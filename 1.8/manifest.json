{
  "name": "Tab Team",
  "version": "1.8",
  "manifest_version": 2,
  "description": "An extension to create grouped tabs.",
  "icons": { "16": "Pics/icon.png",
             "48": "Pics/icon.png",
             "128": "Pics/icon.png" },
  "browser_action": {
    "default_icon": "Pics/icon.png",
    "default_popup": "popup.html",
    "default_title": "Tab Team"  
  },
  "background": {
    "scripts": ["Scripts/background.js", "Scripts/trigger.js", 
                "Scripts/pin_tabs.js", "Scripts/left_trigger.js"]
  },
  "permissions": [   
  "tabs"
  ],
  "content_scripts": [
  {
    "matches": ["<all_urls>"], // run for http & https pages
     "js": ["Scripts/key_event.js"],  // key_event.js is injected to the page, this handles key press
     "run_at": "document_start" 
  }
  ]
}