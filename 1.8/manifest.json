{
  "name": "Tab Team",
  "version": "1.8",
  "manifest_version": 2,
  "description": "An extension to create grouped tabs.",
  "icons": { "16": "icon.png",
             "48": "icon.png",
             "128": "icon.png" },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"  
  },
  "background": {
    "scripts": ["background.js", "trigger.js"]
  },
  "permissions": [   
  "tabs"
  ],
  "content_scripts": [
  {
    "matches": ["<all_urls>"], // run for http & https pages
     "js": ["key_event.js"],  // key_event.js is injected to the page, this handles key press
     "run_at": "document_start" 
  }
  ]
}